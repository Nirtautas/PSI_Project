@model FilePost
@{
	ViewData["Title"] = "Delete File Post";
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Delete File</title>
	<link rel="stylesheet" href="~/css/CreateCourseStyle.css" asp-append-version="true" />
</head>

<body>
	<div class="ribbon">
		<div class="Name">
			<a>Mudli</a>
		</div>
	</div>
	<form onsubmit="return confirm('Are you sure you want to delete this post?');" method="post" asp-controller="CourseEnvironment" asp-action="DeleteFilePost">
		<div class="form-container">
			<h2>Delete File</h2>
		</div>
		<div class="form-container">
			<h2>Do you wish to delete post: @Model.Name?</h2>
		</div>
		<input type="hidden" id="Input.Name" name="name" asp-for="Name" value="@Model.Name" />
		<input type="hidden" id="Visibility" asp-for="IsVisible" value="@Model.IsVisible" />
		<input type="hidden" id="FileName" name="FileName" asp-for="FileName" />
		<input type="hidden" id="courseId" name="courseId" asp-for="CourseId" value="@Model.CourseId" />
		<input type="hidden" id="PostType" name="PostType" asp-for="PostType" value="@Model.PostType" />
		<input type="hidden" id="CreationDate" name="CreationDate" asp-for="CreationDate" value="@Model.CreationDate" />
		<input type="hidden" id="PostId" name="PostId" asp-for="PostId" value="@Model.PostId" />

		<button type="submit" class="btn-primary">Delete Post</button>
		<a asp-action="Index" asp-controller="CourseEnvironment" asp-route-courseId="@Model.CourseId" class="text-style" style="text-decoration: none; color: #ffffff;">Back</a>
	</form>
</body>
</html>